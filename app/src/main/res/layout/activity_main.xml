<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.grasset.fernando.marguerite_bourgeoys.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/usernameChamp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:ems="10"
            android:hint="@string/nom_d_utilisateur"
            android:inputType="textPersonName"
            android:scrollHorizontally="false" />

        <EditText
            android:id="@+id/passwordChamp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:ems="10"
            android:hint="@string/mot_de_passe"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/loginButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="125dp"
            android:text="@string/connexion" />

        <Button
            android:id="@+id/resetPasswordButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="125dp"
            android:text="@string/r_cup_rer_mon_mot_de_passe" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="174dp"
            android:layout_marginTop="75dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/newAccountButton"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="125dp"
                android:text="@string/nouveau_compte" />

        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
