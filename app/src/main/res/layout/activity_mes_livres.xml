                    android:id="@+id/renouvelerButtonLivreRare3"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="65dp"
                    android:layout_marginEnd="50dp"
                    app:srcCompat="@android:drawable/btn_star_big_on" android:contentDescription="@string/todo" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tableTitleLivreRare4"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/textview" />

                <TextView
                    android:id="@+id/tableAuteurLivreRare4"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/textview" />

                <TextView
                    android:id="@+id/tableRetourneLivreRare4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/textview" />

                <ImageButton
                    android:id="@+id/renouvelerButtonLivreRare4"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
