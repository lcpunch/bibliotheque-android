                    android:layout_marginEnd="50dp"
                    app:srcCompat="@android:drawable/btn_star_big_on" android:contentDescription="@string/todo" />
            </TableRow>

        </TableLayout>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:checkedButton="@+id/radioButtonMyBooks"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButtonRareBooks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/rdv_livre_rare" />

            <RadioButton
                android:id="@+id/radioButtonMyBooks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/meslivres" />

            <RadioButton
                android:id="@+id/radioButtonSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/rechercher" />

        </RadioGroup>

        <ImageButton
            android:id="@+id/helpButton"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="175dp"
            app:srcCompat="@android:drawable/ic_menu_help" android:contentDescription="@string/todo" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
